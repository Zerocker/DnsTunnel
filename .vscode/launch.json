    "version": "0.2.0",
    "configurations": [
        {
            "name": "Exfiltration",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/exfiltration.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "args": [
                "--timeout", "10"
            ],
        },
        {
            "name": "Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "console": "integratedTerminal",
            "args": [
                "--connect", "localhost:53",
                "--send-text",
                "--qtype", "AAAA",
                "--timeout", "10",
                "--scramble", "3", "11",
            ],
        },
        {
            "name": "Sniffer",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/sniffer.py",
            "console": "integratedTerminal",
            "args": [
                "--gateway", "127.0.0.1",
                "--filename", "other/bad.pcap",
            ],
        }
    ],
}