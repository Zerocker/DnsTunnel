    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Dns",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dns.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "args": [
                "--port",
                "53",
                "--max-conns",
                "1",
            ],
        },
        {
            "name": "Python: Client",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "console": "integratedTerminal",
            "args": [
                "--connect",
                "localhost:53",
                "--send-text"
            ],
        }
    ]
}